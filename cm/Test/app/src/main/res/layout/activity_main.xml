<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RadioGroup
        android:id="@+id/radio_head"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radio_head_left"
            android:layout_width="35dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="금융자산"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/radio_head_right"
            android:layout_width="35dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="손익 종합"
            android:textSize="12dp" />
    </RadioGroup>


    <com.example.test.NewScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/date_ll"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toStartOf="@+id/btn_reset"
                    android:layout_toLeftOf="@+id/btn_reset"
                    android:gravity="center"
                    android:text="2020.12.12 15:00"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/btn_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/txt_intro" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_item_box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/txt_income"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text="@string/txt_income"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/txt_income"
                        android:layout_toRightOf="@+id/txt_income"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/total_income"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toStartOf="@+id/txt_won1"
                        android:layout_toLeftOf="@+id/txt_won1"
                        android:gravity="center"
                        android:text="@string/txt_income"
                        android:textColor="@color/darkblue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_won1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="@string/txt_won"
                        android:textColor="#4C5FA5"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="@string/txt_total"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/txt_total"
                        android:layout_toRightOf="@+id/txt_total"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/total_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toStartOf="@+id/txt_won2"
                        android:layout_toLeftOf="@+id/txt_won2"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/txt_total"
                        android:textColor="@color/darkblue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_won2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="@string/txt_won"
                        android:textColor="#4C5FA5"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_item_box"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_major_require"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text="@string/txt_major_require"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:layout_toEndOf="@+id/txt_major_require"
                        android:layout_toRightOf="@+id/txt_major_require"
                        android:background="@color/white"
                        android:gravity="center"
                        app:backgroundTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/major_require"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_toStartOf="@+id/txt_won3"
                        android:layout_toLeftOf="@+id/txt_won3"
                        android:gravity="center"
                        android:text="@string/txt_major_require"
                        android:textColor="@color/darkblue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_won3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="@string/txt_won"
                        android:textColor="#4C5FA5"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>


            <RadioGroup
                android:id="@+id/header_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_button_left"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="금융자산"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/radio_button_right"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="손익 종합"
                    android:textSize="12dp" />
            </RadioGroup>

            <include
                android:id="@+id/tab_left"
                layout="@layout/finacial_income_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </com.example.test.NewScrollView>


</LinearLayout>
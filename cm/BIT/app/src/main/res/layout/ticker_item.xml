<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tickerName"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:text="@string/item_Name"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/opening_Price"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:text="@string/opening_price"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/tickerName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/closing_Price"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:text="@string/closing_price"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@+id/opening_Price"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/min_Price"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:text="@string/min_price"
                android:textColor="@color/lowPrice"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/closing_Price"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/max_Price"
                android:layout_width="77dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:text="@string/max_price"
                android:textColor="@color/highPrice"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/min_Price"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
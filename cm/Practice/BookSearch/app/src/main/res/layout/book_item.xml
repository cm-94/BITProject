<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_book"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/img_book"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:text="test"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            style="@style/txt_size_14_multilines"
            android:id="@+id/title_tv"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="test"
            android:paddingLeft="5dp"/>

        <TextView
            style="@style/txt_size_14"
            android:id="@+id/publisher_author_tv"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/price_tv"
            android:layout_toLeftOf="@+id/price_tv"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/publisher_author"
            android:textSize="14dp" />

        <TextView
            style="@style/txt_size_14"
            android:id="@+id/price_tv"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_tv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:text="price"
            android:textSize="14dp" />



    </RelativeLayout>

</LinearLayout>